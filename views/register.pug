    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
  body(style='padding-left:250px;padding-right:250px;padding-top:100px;')
    form(action='/register', method='POST')
      .form-group
        label(for='exampleInputEmail1') Nickname
        input.form-control(type='text', placeholder='Enter nickname', name='nickname', required='')
      .form-group
        label(for='exampleInputEmail1') Email
        input.form-control(type='text', placeholder='Enter e-mail', name='email', required='')
      .form-group
        label(for='exampleInputPassword1') Password
        input.form-control(type='password', name='password', placeholder='Password', required='')
      button.btn.btn-primary(name='sbmitbutton', type='submit') Register
